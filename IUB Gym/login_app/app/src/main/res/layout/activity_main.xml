<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:id="@+id/layoutTop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IUB Gym"
            android:textStyle="bold"
            android:layout_marginRight="55dp"
            android:id="@+id/topIubSign"
            android:textSize="25dp"
            />

        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Sign Up"
            android:textSize="12dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/black"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/loginBtn"
            android:layout_toLeftOf="@+id/signUpBtn"
            android:text="Login"
            android:textSize="12dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/black"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/gymFacility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTop"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/img" />


        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@id/img1"
            android:layout_marginLeft="10dp"
            android:text="IUB GYM facility offers high quality equipment."
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/img" />


        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@id/img2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="IUB GYM facility offers high quality equipment."
            android:textAlignment="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gymFacility"
        android:layout_marginTop="10dp"
        android:id="@+id/gymFacility2">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/img"
            android:layout_marginLeft="10dp"
            android:id="@+id/img3"
            />


        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="IUB GYM facility offers high quality equipment."
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:layout_below="@id/img3"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/img"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/img4"
            />


        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="IUB GYM facility offers high quality equipment."
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:layout_below="@id/img4"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gymFacility2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">


        <TextView
            android:id="@+id/applicationForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/applicationForm"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/termsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/applicationForm"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="@string/TermsAndConditions"
            android:textColor="#FF0000" />


        <TextView
            android:id="@+id/noticeBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/termsAndConditions"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="@string/noticeBoard"
            android:textColor="#FF0000" />


    </RelativeLayout>


</RelativeLayout>